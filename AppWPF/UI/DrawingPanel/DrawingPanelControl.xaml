<UserControl x:Class="AppWPF.DrawingPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="360"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Border Grid.Row="0" Grid.ColumnSpan="3" x:Name="TitleBarBorder" Background="{StaticResource WordleBlackBrush}" BorderBrush="{StaticResource WordleBorderBrush}" BorderThickness="0,0,0,2">
            <TextBlock Text="{Binding AnswerHeader}" 
            Foreground="{StaticResource WordleWhiteBrush}"
            FontSize="32" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontWeight="DemiBold"/>
        </Border>

        <Border Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="3" Background="{StaticResource WordleBlackBrush}"/>

        <ItemsControl Grid.Row="2" Grid.Column="1" ItemsSource="{Binding Cells}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="6" Columns="5"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemContainerStyle>
                <Style>
                    <Setter Property="Grid.Row" Value="{Binding Row}"/>
                    <Setter Property="Grid.Column" Value="{Binding Column}"/>
                </Style>
            </ItemsControl.ItemContainerStyle>

            <!-- TODO_LOW: I could have just put the commands on the actual cell class... -->
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Margin="3"
                    BorderThickness="2"
                    Background="{Binding Color, Converter={StaticResource BoxColorConverter}}"
                    Command="{Binding DataContext.ColorBoxInCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    CommandParameter="{Binding}"
                    Cursor="Hand">
                        <Button.InputBindings>
                            <MouseBinding Gesture="RightClick"
                                Command="{Binding DataContext.ClearBoxCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"/>
                        </Button.InputBindings>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        
    </Grid>
</UserControl>
