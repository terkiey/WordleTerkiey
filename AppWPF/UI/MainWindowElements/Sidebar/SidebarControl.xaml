<UserControl x:Class="AppWPF.SidebarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppWPF"
             mc:Ignorable="d">

    <Border x:Name="Sidebar" Background="{StaticResource WordleBlackBrush}" BorderBrush="{StaticResource WordleBorderBrush}" BorderThickness="0,0,2,0">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel x:Name="Sidebar_Button_Panel" Grid.Row="0" Margin="5,5,5,5">

                <Button x:Name="Clear_Button" Style="{StaticResource SideBarButtonStyle}" 
                         ToolTip="Clear Grid&#10;Shortcut : 1"
                         Command="{Binding ClearCommand}">
                    <Image Source="/Assets/Buttons/Clear.png" Stretch="Uniform"/>
                </Button>
                <Button x:Name="Color_Cycle_Button"
                         Style="{StaticResource ColorPickerButtonStyle}" 
                         Command="{Binding ColorCycleCommand}">
                </Button>
                <Button x:Name="Solve_Button" Style="{StaticResource SideBarButtonStyle}" 
                         ToolTip="Solve&#10;Shortcut : 3"
                         Command="{Binding SolveCommand}">
                    <Image Source="/Assets/Buttons/Solve.png" Stretch="Uniform"/>
                </Button>
            </StackPanel>

            <Button Grid.Row="1" Style="{StaticResource SideBarButtonStyle}"
                    ToolTip="Define Answer Word&#10;Shortcut : 4" 
                    Command="{Binding CustomWordCommand}"/>
        </Grid>
    </Border>
</UserControl>
