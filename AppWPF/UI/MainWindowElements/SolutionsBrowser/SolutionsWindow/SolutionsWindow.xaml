<Window x:Class="AppWPF.SolutionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppWPF"
        mc:Ignorable="d"
        Title="WordleTerkiey - Solution Browser" Height="600" Width="600" MinHeight="400" MinWidth="400"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- The color grid for a single boardclue -->
        <DataTemplate x:Key="BoardGridTemplate">
            <Grid Background="Transparent">
                <Grid.InputBindings>
                    <MouseBinding Gesture="LeftClick"
                          Command="{Binding DataContext.LoadAndSolveSolutionCommand,
                                            RelativeSource={RelativeSource AncestorType=Window}}"
                          CommandParameter="{Binding outputBoard}"/>
                </Grid.InputBindings>

                <ItemsControl ItemsSource="{Binding outputBoard, Converter={StaticResource SolutionBoardConverter}}"
                          Width="150" Height="180" Margin="10,3,10,20">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="6" Columns="5"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                            BorderBrush="{StaticResource WordleBorderBrush}"
                            Width="20" Height="20"
                            BorderThickness="1"
                            Background="{Binding Converter={StaticResource BoxColorConverter}}">
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF313648"/>
            <GradientStop Color="#FF1D2446" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    
    <Grid Background="{StaticResource WordleBlackBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="{StaticResource WordleBorderBrush}" BorderThickness="0,0,0,2">
            <TextBlock
                Text="Solutions"
                Foreground="{StaticResource WordleWhiteBrush}"
                FontSize="32" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontWeight="DemiBold"
                />
        </Border>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="3">
            <ItemsControl ItemsSource="{Binding CurrentSolutions}" ItemTemplate="{StaticResource BoardGridTemplate}" HorizontalAlignment="Center" Margin="10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <Border Grid.Row="2" BorderBrush="{StaticResource WordleBorderBrush}" BorderThickness="0,2,0,0">
            <TextBlock
                Text="Double-click a pattern to load and solve it"
                Foreground="{StaticResource WordleWhiteBrush}"
                FontSize="20" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontStyle="Italic"
                />
        </Border>
    </Grid>



</Window>
