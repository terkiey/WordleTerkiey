<UserControl x:Class="AppWPF.ExampleShowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             
             x:Name="ExampleShow">

    <Grid>
        <!-- Content when the example is present -->
        <Border x:Name="ExamplePresent" Background="{StaticResource WordleBlackBrush}" BorderBrush="{StaticResource WordleBorderBrush}" BorderThickness="2,0,0,2">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <!-- Make visible if the exampleVM has data -->
                        <DataTrigger Binding="{Binding SolutionExampleVM.NoData, ElementName=ExampleShow}" Value="False">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <!-- Hover effect border -->
            <Border Background="Transparent" BorderThickness="2">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Style.Triggers>
                            <!-- Hover effect based on UserControl -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="Yellow"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                        Foreground="{StaticResource WordleWhiteBrush}"
                        FontSize="22"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontWeight="DemiBold"
                        Margin="15,15,15,15"
                        TextWrapping="Wrap">
                        <Run Text="{Binding ExampleName, ElementName=ExampleShow}"/>
                        <LineBreak/>
                        <Run Text="Solution Found" Foreground="Green" FontSize="22" FontWeight="Normal" FontStyle="Italic"/>
                    </TextBlock>

                    <ItemsControl Grid.Column="1" ItemsSource="{Binding SolutionExampleVM.Words, ElementName=ExampleShow}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="6"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="16" Foreground="{StaticResource WordleWhiteBrush}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>


                    <ItemsControl Grid.Column="2" ItemsSource="{Binding SolutionExampleVM.Colors, ElementName=ExampleShow}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="6" Columns="5"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    BorderBrush="{StaticResource WordleBorderBrush}"
                                    BorderThickness="1"
                                    Background="{Binding Color, Converter={StaticResource BoxColorConverter}}">
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Border>

        <!-- Content when the example is empty -->
        <Border x:Name="EmptyExample"
                Background="{StaticResource WordleBlackBrush}" BorderBrush="{StaticResource WordleBorderBrush}" BorderThickness="2,0,0,2">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SolutionExampleVM.NoData, ElementName=ExampleShow}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                    Foreground="{StaticResource WordleWhiteBrush}"
                    FontSize="22"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontWeight="DemiBold"
                    Margin="15,15,15,15"
                    TextWrapping="Wrap">
                    <Run Text="{Binding ExampleName, ElementName=ExampleShow}"/>
                    <LineBreak/>
                    <Run Text="None Found" Foreground="Red" FontSize="22" FontWeight="Normal" FontStyle="Italic"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
