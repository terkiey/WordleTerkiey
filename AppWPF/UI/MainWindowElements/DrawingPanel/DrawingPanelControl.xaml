<UserControl x:Class="AppWPF.DrawingPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             
             PreviewMouseMove="DrawingPanelControl_PreviewMouseMove">

    <UserControl.Resources>
        <Style x:Key="HoverableBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="{StaticResource WordleBorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="Yellow"/>
                    <Setter Property="BorderThickness" Value="3"/>
                </Trigger>

                <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                    <Setter Property="BorderBrush" Value="Yellow"/>
                    <Setter Property="BorderThickness" Value="3"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="360"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.ColumnSpan="3" x:Name="TitleBarBorder" Background="{StaticResource WordleBlackBrush}" BorderBrush="{StaticResource WordleBorderBrush}" BorderThickness="0,0,0,2">
            <TextBlock Text="{Binding AnswerHeader}" 
            Foreground="{StaticResource WordleWhiteBrush}"
            FontSize="32" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontWeight="DemiBold"/>
        </Border>

        <Border Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="3" Background="{StaticResource WordleBlackBrush}"/>

        <ItemsControl Grid.Row="2" Grid.Column="1" ItemsSource="{Binding Cells}" x:Name="GridItemsControl"
                      PreviewMouseLeftButtonDown="ItemsControl_PreviewMouseLeftButtonDown"
                      PreviewMouseRightButtonDown="ItemsControl_PreviewMouseRightButtonDown"
                      PreviewMouseLeftButtonUp="ItemsControl_PreviewLeftMouseButtonUp"
                      PreviewMouseRightButtonUp="ItemsControl_PreviewRightMouseButtonUp"
                      Cursor="Hand">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid x:Name="Cell_Grid" Rows="6" Columns="5" Background="Transparent"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemContainerStyle>
                <Style>
                    <Setter Property="Grid.Row" Value="{Binding Row}"/>
                    <Setter Property="Grid.Column" Value="{Binding Column}"/>
                </Style>
            </ItemsControl.ItemContainerStyle>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Margin="3" Background="{Binding Color, Converter={StaticResource BoxColorConverter}}" Cursor="Hand"
                            IsHitTestVisible="True" Style="{StaticResource HoverableBorder}">
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <TextBlock 
            Grid.Row="3" Grid.Column="0" 
            Grid.ColumnSpan="2" 
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Margin="5,0,0,0"
            Text="{Binding SolveStateText}"
            Foreground="{StaticResource WordleWhiteBrush}">
        </TextBlock>
    </Grid>
</UserControl>
