<UserControl x:Class="AppWPF.SolutionsBrowserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <local:BoxColorToBrushConverter x:Key="BoxColorConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="TitleBar" Height="50"/>
            <RowDefinition x:Name="ExactMatches" Height="*"/>
            <RowDefinition x:Name="ShapeMatches" Height="*"/>
            <RowDefinition x:Name="MissOneMatches" Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" x:Name="TitleBarBorder" Background="{StaticResource WordleBlackBrush}" BorderBrush="{StaticResource WordleBorderBrush}" BorderThickness="2,0,0,2">
            <TextBlock Text="Solutions" 
                       Foreground="{StaticResource WordleWhiteBrush}"
                       FontSize="32" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="DemiBold"
                       />
        </Border>

        <local:ExampleShowControl ExampleName="Exact Matches" Grid.Row="1"
            Words="{Binding ExactSolutionExample.Words}" Colors="{Binding ExactSolutionExample.Colors}"/>

        <local:ExampleShowControl ExampleName="Palette-Swap Matches" Grid.Row="2"
            Words="{Binding ShapeSolutionExample.Words}" Colors="{Binding ShapeSolutionExample.Colors}"/>

        <local:ExampleShowControl ExampleName="Mirror &amp; Palette-Swap Matches" Grid.Row="3"
            Words="{Binding MirrorPaletteSolutionExample.Words}" Colors="{Binding MirrorPaletteSolutionExample.Colors}"/>

    </Grid>
</UserControl>
