<Window x:Name="Application_Window" x:Class="AppWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppWPF"
        mc:Ignorable="d"
        
        Title="{Binding WindowTitle}"
        Height="540" Width="960"    
        MinHeight="540" MinWidth="960"
        Icon="/Assets/Icon/Wordle T.png">

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF313648"/>
            <GradientStop Color="#FF1D2446" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>


    <Grid x:Name="BaseGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition x:Name="SidebarCol" Width="80"/>
            <ColumnDefinition x:Name="DrawingAreaCol" Width="6*"/>
            <ColumnDefinition x:Name="SolutionsBrowserCol" Width="5*" />
        </Grid.ColumnDefinitions>

        <local:SidebarControl x:Name="Sidebar" Grid.Row="0" Grid.Column="1" DataContext="{Binding SidebarVM}" />
        <local:DrawingPanelControl Grid.Row="0" Grid.Column="2" DataContext="{Binding DrawingPanelVM}"/>
        <local:SolutionsBrowserControl Grid.Row="0" Grid.Column="3" DataContext="{Binding SolutionsBrowserVM}"/>
    </Grid>


    <Window.InputBindings>
        <KeyBinding Key="D1"
                    Command="{Binding DataContext.ClearCommand, ElementName=Sidebar}"/>
        <KeyBinding Key="D2"
                    Command="{Binding DataContext.ColorCycleCommand, ElementName=Sidebar}"/>
        <KeyBinding Key="D3"
                    Command="{Binding DataContext.SolveCommand, ElementName=Sidebar}"/>
        <KeyBinding Key="D4"
                    Command="{Binding DataContext.CustomWordCommand, ElementName=Sidebar}"/>
    </Window.InputBindings>
</Window>
