<UserControl x:Class="AppWPF.SolutionsBrowserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="TitleBar" Height="50"/>
            <RowDefinition x:Name="ExactMatches" Height="*"/>
            <RowDefinition x:Name="ShapeMatches" Height="*"/>
            <RowDefinition x:Name="MissOneMatches" Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" x:Name="TitleBarBorder" Background="#FF333644" BorderBrush="#FF1D1F27" BorderThickness="2,0,0,2">
            <TextBlock Text="Solutions" 
                       Foreground="{StaticResource WordleWhiteBrush}"
                       FontSize="32" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="DemiBold"
                       />
        </Border>

        <Border Grid.Row="1" Background="#FF333644" BorderBrush="#FF1D1F27" BorderThickness="2,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Exact Matches"
                           Foreground="{StaticResource WordleWhiteBrush}"
                           FontSize="24"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="DemiBold"
                           Margin="5,5,5,5"
                           TextWrapping="Wrap"
                           />

                <UniformGrid Grid.Column="1" Columns="5" Rows="6">
                    
                </UniformGrid>
            </Grid>

            
        </Border>

        <Border Grid.Row="2" Background="#FF333644" BorderBrush="#FF1D1F27" BorderThickness="2,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                    Text="Shape Matches"
                    Foreground="{StaticResource WordleWhiteBrush}"
                    FontSize="24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontWeight="DemiBold"
                    Margin="5,5,5,5"
                    TextWrapping="Wrap"
                    />

                <UniformGrid Grid.Column="1" Columns="5" Rows="6">

                </UniformGrid>
            </Grid>


        </Border>

        <Border Grid.Row="3" Background="#FF333644" BorderBrush="#FF1D1F27" BorderThickness="2,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                    Text="Miss One Matches"
                    Foreground="{StaticResource WordleWhiteBrush}"
                    FontSize="24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontWeight="DemiBold"
                    Margin="5,5,5,5"
                    TextWrapping="Wrap"
                    />

                <UniformGrid Grid.Column="1" Columns="5" Rows="6">

                </UniformGrid>
            </Grid>


        </Border>

    </Grid>
</UserControl>
