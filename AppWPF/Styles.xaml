<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <Style x:Key="SideBarButtonStyle" TargetType="Button">
        <Setter Property="Height" Value="50"/>
        <Setter Property="Width" Value="50"/>
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="BorderBrush" Value="{x:Null}"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="ToolTip" Value="Placeholder tooltip" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Background="Transparent">
                        <Grid.Clip>
                            <RectangleGeometry Rect="0,0,50,50" RadiusX="6" RadiusY="6"/>
                        </Grid.Clip>
                        <Border x:Name="BaseBackground"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"/>

                        <Image x:Name="Placeholder" Source="/Assets/Placeholder.png" Stretch="Uniform" Visibility="Collapsed"/>
                        <ContentPresenter x:Name="contentPresenter"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        <Border x:Name="Overlay"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="2"
                            CornerRadius="6"
                            Opacity="0" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="Content" Value="{x:Null}">
                            <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                        </Trigger>

                        <!-- HOVER EFFECT -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Overlay" Property="Opacity" Value="0.5"/>
                            <Setter TargetName="Overlay" Property="Background" Value="#FFBEE6FD"/>
                            <Setter TargetName="Overlay" Property="BorderBrush" Value="#FF3C7FB1"/>
                        </Trigger>

                        <!-- PRESSED EFFECT -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Overlay" Property="Opacity" Value="0.5"/>
                            <Setter TargetName="Overlay" Property="Background" Value="#FFC4E5F6"/>
                            <Setter TargetName="Overlay" Property="BorderBrush" Value="#FF2C628B"/>
                        </Trigger>

                        <!-- BUTTON DISABLED EFFECT -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Overlay" Property="Opacity" Value="0.7"/>
                            <Setter TargetName="Overlay" Property="Background" Value="Gray"/>
                            <Setter TargetName="Overlay" Property="BorderBrush" Value="DarkGray"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

    <Style x:Key="ColorPickerButtonStyle" TargetType="Button">
        <Setter Property="Height" Value="50"/>
        <Setter Property="Width" Value="50"/>
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="BorderBrush" Value="{x:Null}"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="Cursor" Value="Hand"/>

        <Setter Property="ToolTip" Value="Cycle Color &#10;Shortcut : 2&#10;Hold shift to use the alternate color when drawing."/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Background="Transparent">
                        <Border x:Name="BaseBackground"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6"/>

                        <Border x:Name="Overlay"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="2"
                        CornerRadius="6"
                        Opacity="0" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- HOVER EFFECT -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Overlay" Property="Opacity" Value="0.3"/>
                            <Setter TargetName="Overlay" Property="Background" Value="#FFBEE6FD"/>
                            <Setter TargetName="Overlay" Property="BorderBrush" Value="#FF3C7FB1"/>
                        </Trigger>

                        <!-- PRESSED EFFECT -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Overlay" Property="Opacity" Value="0.3"/>
                            <Setter TargetName="Overlay" Property="Background" Value="#FFC4E5F6"/>
                            <Setter TargetName="Overlay" Property="BorderBrush" Value="#FF2C628B"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <DataTrigger Binding="{Binding ColorPicker}" Value="Yellow">
                <Setter Property="Background" Value="{StaticResource WordleYellowBrush}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding ColorPicker}" Value="Green">
                <Setter Property="Background" Value="{StaticResource WordleGreenBrush}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>